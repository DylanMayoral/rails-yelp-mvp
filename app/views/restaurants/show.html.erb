<div class="container d-flex flex-column justify-content-center align-items-center vh-100 mt-5">
  <h1><%=@restaurant.name %></h1>


    <div class="card my-3 d-flex justify-content-center align-items-center" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= @restaurant.name %></h5>
        <p class="card-text mb-1"><%= @restaurant.address %></p>
        <p class="card-text"><%= @restaurant.category %></p>
        <h5 class="card-title">Reviews:</h5>
        <ol>
        <% @restaurant.reviews.each do |review| %>

        <li><%=review.content%> | <%=review.rating%></li>

        <%end %>
        </ol>


      </div>
      <%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mb-3" %>
    </div>
 <%= link_to "View All Restaurants", restaurants_path(@restaurant), class: "btn btn-primary" %>
</div>
